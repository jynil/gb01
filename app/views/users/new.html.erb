<h4>Register</h4>

  <%= form_for @user do |f| %>

    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
    <br>
    <%= f.label :password %>
    <br>
    <%= f.password_field :password%>

  <br>
  <%= f.submit(@user.new_record? ? 'Register' : 'Update Profile', class: 'btn btn-primary') %>
  <% end %>